mixin form(title,subtitle)
	.form
		.form__title=title
		.form__subtitle=subtitle
		input(type="text" placeholder="ФИО")
		input(type="tel" placeholder="Телефон")
mixin navigation
	nav.navigation
		.navigation__logo
			img(src="./img/logo.png", alt="logo")
		ul.navigation__list
			li.navigation__item Преимущества
			li.navigation__item Сравнения
			li.navigation__item Типы панелей
			li.navigation__item Галерея
			li.navigation__item Оплата
			li.navigation__item Отзывы
		.navigation__phone
			a(href="tel:+78432400238").navigation__phone +7(843)2400238
			button.navigation__order Заказать звонок
mixin contacts(cl)
	ul.contacts(class=cl)
		li.contacts__item
			a(href="#")
				img(src="./img/viber.png", alt="viber")
		li.contacts__item
			a(href="#")
				img(src="./img/whatsapp.png", alt="whatsapp")
		li.contacts__item
			a(href="#")
				img(src="./img/telegram.png", alt="telegram")