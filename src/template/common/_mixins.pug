mixin form(title,subtitle)
	.form.stocks__form
		.form__title=title
		.form__subtitle=subtitle
		.form__input
			input(type="text" placeholder="ФИО")
			input(type="tel" placeholder="Телефон")
mixin stocks(title,subtitle)
	.stocks__form
		.stocks__title=title
		.stocks__subtitle=subtitle
		.stocks__input
			input(type="text" placeholder="ФИО")
			input(type="tel" placeholder="Телефон")
mixin navigation
	nav.navigation
		a(href="/").navigation__logo
			img(src="./img/logo.png", alt="logo")
		ul.navigation__list
			li.navigation__item.hvr-grow Преимущества
			li.navigation__item.hvr-grow Сравнения
			li.navigation__item.hvr-grow Типы панелей
			li.navigation__item.hvr-grow Галерея
			li.navigation__item.hvr-grow Оплата
			li.navigation__item.hvr-grow Отзывы
		.navigation__phone
			a(href="tel:+78432400238").hvr-pulse +7(843)2400238
			button Заказать звонок
mixin contacts(cl)
	ul.contacts(class=cl)
		li.contacts__item
			a(href="#")
				img(src="./img/viber.png", alt="viber")
		li.contacts__item
			a(href="#")
				img(src="./img/whatsapp.png", alt="whatsapp")
		li.contacts__item
			a(href="#")
				img(src="./img/telegram.png", alt="telegram")