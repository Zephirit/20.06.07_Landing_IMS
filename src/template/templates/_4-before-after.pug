section.beforeAfter.section#beforeAfter
	.beforeAfter__content
		.beforeAfterMenu
			.beforeAfterMenu__title Еще проекты
			.beforeAfterMenu__list
				.beforeAfterMenu__item.hvr-bubble-left
					.beforeAfterMenu__img.hvr-grow
						img(src=`./img/before-after/1slider_after.jpg`, alt="more")
				.beforeAfterMenu__item.hvr-bubble-left
					.beforeAfterMenu__img.hvr-grow
						img(src=`./img/before-after/2slider_after.jpg`, alt="more")
				.beforeAfterMenu__item.hvr-bubble-left
					.beforeAfterMenu__img.hvr-grow
						img(src=`./img/before-after/3slider_after.jpg`, alt="more")
				.beforeAfterMenu__item.hvr-bubble-left
					.beforeAfterMenu__img.hvr-grow
						img(src=`./img/before-after/4slider_after.jpg`, alt="more")
		.beforeAfterBody
			.beforeAfterBody__title До и после
			.beforeAfterBody__list
				each item in [1,2,3,4]
					.beforeAfterBody__img.animated.fadeIn(class=`beforeAfterBody_${item}`)
						.container-beforeafter
							.beforeafter
								.beforeafter-item.beforeafter-itemActive
									img(src=`./img/before-after/${item}slider_after.jpg`, alt="after")
								.beforeafter-item
									img(src=`./img/before-after/${item}slider_before.jpg`, alt="before")
			.beforeAfterBody__desc
				span До
				span После